<!DOCTYPE html>
<html>
<head>
    <title>Profile Test</title>
    <style>
        body {
            font-family: Arial;
            padding: 40px;
        }
        form {
            width: 500px;
        }
        input, textarea {
            width: 100%;
            margin-bottom: 15px;
            padding: 8px;
        }
        img {
            margin-top: 10px;
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 50%;
        }
    </style>
</head>
<body>

<h2>Profile Test Form</h2>

<form action="/api/User/profile" method="POST" enctype="multipart/form-data">

    <!-- Profile Image -->
    <label>Profile Image:</label>
    <input type="file" name="profileImage" id="profileImage" accept="image/*" />
    <img id="imagePreview" style="display:none;" />

    <!-- Resume -->
    <label>Upload Resume (PDF only):</label>
    <input type="file" name="resume" accept="application/pdf" />

    <!-- Bio -->
    <label>Bio:</label>
    <textarea name="bio" placeholder="Enter your bio"></textarea>

    <!-- Skills -->
    <label>Skills (comma separated):</label>
    <input type="text" name="skills" placeholder="e.g. Node.js, MongoDB, React" />

    <!-- Experience -->
    <label>Experience (Years):</label>
    <input type="number" name="experience" min="0" />

    <!-- Location -->
    <label>Location:</label>
    <input type="text" name="location" />

    <!-- Company Name -->
    <label>Company Name (Employer only):</label>
    <input type="text" name="companyName" />

    <!-- Website -->
    <label>Website:</label>
    <input type="text" name="website" />

    <button type="submit">Save Profile</button>

</form>

<script>
    const imageInput = document.getElementById("profileImage");
    const preview = document.getElementById("imagePreview");

    imageInput.addEventListener("change", function () {
        const file = this.files[0];
        if (file) {
            preview.style.display = "block";
            preview.src = URL.createObjectURL(file);
        }
    });
</script>

</body>
</html>
